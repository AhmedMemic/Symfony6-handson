{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
    {% if posts|length > 0 %}
    <h2>All Posts</h2>
        {% for post in posts %}
            <div>
                <a href="{{ path('app_micro_post_show', { post: post.id }) }}">
                    {{ post.title }}
                </a>
            </div>
        {% endfor %}
    {% else %}
        There is nothing here yet!
    {% endif %}
{% endblock %}
